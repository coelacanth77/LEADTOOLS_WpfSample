<Window x:Class="LEADTOOLS_WpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LEADTOOLS_WpfSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="479.63" Width="680.556">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="messageText" Text="OneDriveから画像を取得し編集するアプリケーションです。" Margin="20,10,0,0"/>

        <Button x:Name="connectOneDriveButton" Content="OneDriveに接続する" Click="connectOneDriveButton_Click" Margin="20,10,0,0" Width="153" HorizontalAlignment="Left"/>
        <ListBox x:Name="imageListBox" Height="100"  Margin="20,10,0,0" Width="400" HorizontalAlignment="Left"/>
        <Button x:Name="leadtoolsImage" Content="OneDriveに接続する" Click="leadtoolsImageButton_Click" Margin="20,10,0,0" Width="153" HorizontalAlignment="Left"/>
        <Image x:Name="image" Height="100" Margin="20,10,0,0" Width="153" HorizontalAlignment="Left"/>
        <Button x:Name="addEffect" Content="画像を変換する" Click="addEffectButton_Click" Margin="20,10,0,0" Width="153" HorizontalAlignment="Left"/>
        <Image x:Name="changedImage" Height="100" Margin="20,10,0,0" Width="153" HorizontalAlignment="Left"/>


    </StackPanel>
</Window>
